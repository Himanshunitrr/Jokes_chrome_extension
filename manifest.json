{
  "manifest_version": 2,
  "name": "Jokes",
  "description": "Read jokes for free",
  "version": "1.0.2",
  "icons": {
    "16": "./images/smile16.png",
    "32": "./images/smile32.png",
    "48": "./images/smile48.png",
    "128": "./images/smile128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "./images/smile16.png",
      "32": "./images/smile32.png",
      "48": "./images/smile48.png",
      "128": "./images/smile128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"]
}
